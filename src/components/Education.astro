---
const education = [
  {
    institution: "University of Manchester",
    degree: "Computer Science and Mathematics (BSc)",
    period: "September 2024 - Present",
    details: "First-Year Average: 70% (On track for First Class Honours)",
    modules: "Probability I (84%), Mathematical Foundations & Analysis (74%), First Year Team Project (81%)"
  },
  {
    institution: "City of Norwich School",
    period: "September 2022 - June 2024",
    details: "A-Levels: Further Mathematics (A*), Mathematics (A*), Computer Science (A), Physics (A)"
  }
];
---

<section>
  <h3 class="section-title"><i class="fas fa-graduation-cap"></i> Education</h3>
  {education.map(edu => (
    <div class="education-item">
      <h4 class="education-title">{edu.institution}</h4>
      {edu.degree && <div class="education-details">{edu.degree}</div>}
      <div class="education-details">{edu.period}</div>
      {edu.details && <div class="education-details highlight">{edu.details}</div>}
      {edu.modules && <div class="education-modules"><strong>Relevant Modules:</strong> {edu.modules}</div>}
    </div>
  ))}
</section>